<aura:component >
    <!--- aura:valueChange -->
    <aura:attribute name="test" type="String" />
    <aura:handler name="change" value="{!v.test}" action="{!c.doChange}" />
    <!-- aura:valueInit -->
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    {!v.test}
    <lightning:button value="change value" label="change value" onclick="{!c.Changedvalue}" />
</aura:component>